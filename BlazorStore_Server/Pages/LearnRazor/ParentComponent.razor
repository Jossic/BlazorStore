@page "/learnBlazor/parentComponent"

<h3>Parent Child Relation</h3>
<CascadingValue Value="@MessageForGrandChild" Name="message">
<CascadingValue Value="@LuckyNumber" Name="lucky">

<_ChildComponent @ref="childComp" OnButtonClick="ShowMessage" Title="Teeeeeeeeeeeeeeeest"> 
    <ChildContent>Somme children content</ChildContent>    
    <DangerChildContent>Danger content</DangerChildContent>
</_ChildComponent>
</CascadingValue>
</CascadingValue>

<p><b>@messageText</b></p>
<_AnotherChildConponent placeholder="A super placeholder"></_AnotherChildConponent>

<div class="row">
    <button class="btn btn-success" @onclick="()=>childComp.ToastrSuccess()">Show Alert</button>
</div>

@*<_ChildComponent OnButtonClick="ShowMessage" Title="Teeeeeeeeeeeeeeeest"/>*@

@code {
    private _ChildComponent childComp;

    public string MessageForGrandChild = "New message for testing";
    public string LuckyNumber = "7";

        public Dictionary<string, object> InputAttributesParents { get; set; } = new Dictionary<string, object>()
    {
        {"required", "required"},
        {"placeholder", "Parent Placeholder text"},
        {"maxlength", 5}
    };
    public string messageText = "";
    private void ShowMessage()
    {
        messageText = "Button clicked from Child component";
    }
}

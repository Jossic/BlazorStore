@page "/learnBlazor/bindprop"

<h3>Product</h3>
Name: @Product.Name <br />
Active: @Product.IsActive <br />
Price: @Product.Price <br />
 @(Product.IsActive ? "This product is Active" : "")<br />
 Property selected : @selectedProp <br />
@if (!String.IsNullOrWhiteSpace(selectedProp))
{
    <p>Property Value : @Product.ProductProperties.FirstOrDefault(item => item.Key == selectedProp).Value</p>
}
<br />
Active: <input type="checkbox" @bind-value="@Product.IsActive" checked="@(Product.IsActive)" /><br />
Price: <input type="number" @bind-value="@Product.Price" @bind-value:event="oninput" /><br />
Product Properties:
<select @bind="@selectedProp">
    @foreach (var prop in Product.ProductProperties)
    {
        <option value="@prop.Key">@prop.Key</option>
    }
</select>




@code {
    private string selectedProp = "";
    BlazorStore_Models.LearnModels.Demo_Product Product = new()
        {
            Id = 1,
            Name = "Rose Candle",
            IsActive = true,
            Price = 10.99,
            ProductProperties = new List<BlazorStore_Models.LearnModels.Demo_ProductProp>
            {
                new BlazorStore_Models.LearnModels.Demo_ProductProp {Id = 1, Key= "Color", Value="Black"},
                new BlazorStore_Models.LearnModels.Demo_ProductProp {Id = 2, Key= "Flavor", Value="Rose Jasmine"},
                new BlazorStore_Models.LearnModels.Demo_ProductProp {Id = 3, Key= "Size", Value="20oz"},
            }
        };
}
